<script>
    $(function() {
        $('.datepicker').datepicker({format: 'dd-mm-yyyy',autoclose: true});
    });
</script>


<div class="modal fade" id="create_event" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title" id="exampleModalLabel">Apply for Time Off</h3>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
         <%= form_with(url: event_path, scope: :event, local: true) do |f| %>
            <div class="modal-body">
                <%= f.label "Description" %>
                <%= f.text_field :title, class: 'form-control'  %>
                <div class="form-inline">
                    <div class="form-group" style="padding-right:2%">
                        <%= f.label "Start Date"%>
                    </div>
                    <div class="form-group">
                        <%= f.text_field :start_date, :class => 'datepicker', 'value'=> params[:startDate] %>
                    </div>
                    <div class="form-group"  style="padding-left:5% ; padding-right:2%">
                        <%= f.label "End Date" %>
                    </div>
                    <div class="form-group">
                        <%= f.text_field :end_date, :class => 'datepicker', 'value'=> params[:endDate] %><br/>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <%= f.submit "Confirm Time-Off!", class: "btn btn-primary" %> 
            </div>
        <% end %>
    </div>
  </div>
</div>
