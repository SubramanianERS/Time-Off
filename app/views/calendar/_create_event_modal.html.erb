<!-- Modal -->
<div class="modal fade" id="create_event" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
         <%= form_with(model: @user, local: true) do |f| %>
            <div class="modal-body">
                <%= f.label :name %>
                <%= f.text_field :name, class: 'form-control'  %>
                <%= f.label "date" %>
                <%# <div class="input-group date" data-provide="datepicker">
                    <input type="text" class="form-control">
                    <div class="input-group-addon">
                        <span class="glyphicon glyphicon-th"></span>
                    </div>
                </div> %>
                <%= f.text_field :cdate, :class => 'datepicker', 'placeholder'=> params[:startDate] %><br/>
                <script>
                    $(function() {
                        $('.datepicker').datepicker({dateFormat: 'yy-mm-dd'});
                    });
                </script>
                <%= f.label :email %>
                <%= f.email_field :email, class: 'form-control'  %>
                <%= f.label :employee_id, "Employee ID" %>
                <%= f.text_field :employee_id, class: 'form-control'  %>
                <%= f.label :password %>
                <%= f.password_field :password, class: 'form-control'  %>
                <%= f.label :password_confirmation, "Confirm password" %>
                <%= f.password_field :password_confirmation, class: 'form-control'  %>
            </div>
            <div class="modal-footer">
                <%= f.submit "Sign Up", class: "btn btn-primary" %> 
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        <% end %>
    </div>
  </div>
</div>
